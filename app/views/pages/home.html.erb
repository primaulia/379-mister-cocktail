<%#= link_to "Create new cocktail", new_cocktail_path, class: 'btn btn-primary btn-block my-3' %>
<div class="cards-container">
  <div class="cards">
    <%= render @cocktails %>
  </div>
  <div class="form-container m-3">
    <h1 id="cocktail-form">Create new cocktail</h1>

    <%= simple_form_for(@new_cocktail, remote: true) do |f| %>
      <%= f.input :name %>
      <%= f.input :photo, as: :file %>
      <%= f.button :submit, class: "btn btn-primary" %>
    <% end %>      
  </div>  
</div>



