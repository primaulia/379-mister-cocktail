<h2><%= @the_cocktail.name %></h2>

<% if @the_cocktail.photo.attached? %>
  <%= cl_image_tag @the_cocktail.photo.key, width: 100 %>
<% end %>

<h3>Recipes</h3>
<ul>
  <% @the_cocktail.doses.each do |dose| %>
    <li>
      <%= dose.description %> of <%= dose.ingredient.name %> | 
      <%= link_to 'delete', dose, method: :delete %>
    </li>
  <% end %>
</ul>

<!-- authorize(@cocktail) ==> in the controller -->
<!-- in the view ==> policy(<instance_name>).<action_name>? -->
<% if policy(@the_cocktail).edit? %>
  <%= link_to 'Edit cocktail', edit_cocktail_path(@the_cocktail), class: 'btn btn-secondary' %>
<% end %>

<%= link_to 'Create dose', new_cocktail_dose_path(@the_cocktail), class: 'btn btn-primary'  %>
<%= link_to 'Back to Home', root_path, class: 'btn btn-secondary' %>