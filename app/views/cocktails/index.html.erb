<div class="row">
  <% @cocktails.each do |cocktail| %>
  <div class="col-md-4">
    <div class="card my-3">
      <% if cocktail.photo.attached? %>
        <%= cl_image_tag cocktail.photo.key, width: 100, class: 'card-img-top' %>
      <% end %>
      <div class="card-body">
        <h5 class="card-title">
          <%= link_to cocktail_path(cocktail) do %>
            <%= cocktail.name %>
          <% end %>
        </h5>
      </div>
    </div>    
  </div>
  <% end %>  
</div>
